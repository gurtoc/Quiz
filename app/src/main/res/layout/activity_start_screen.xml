<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:padding="16dp"
        tools:context=".StartScreenActivity">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="MÃ³j testowy quiz"
              android:textColor="@android:color/white"
              android:layout_centerHorizontal="true"
              android:textSize="30dp"
              android:layout_marginTop="10dp"
              android:fontFamily="monospace"
    />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/button_rozpocznij_quiz"
            android:text="Rozpocznij quiz"
            android:fontFamily="monospace"
            android:layout_centerInParent="true"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/text_highscore"
              android:text="Najlepszy wynik:0"
              android:layout_below="@id/button_rozpocznij_quiz"
              android:layout_centerHorizontal="true"
              android:layout_margin="30dp"
              android:textSize="24dp"
              android:textColor="@android:color/holo_orange_dark"
              android:fontFamily="monospace"/>

</RelativeLayout>